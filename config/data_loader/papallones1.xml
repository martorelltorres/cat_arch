<launch>
	<!-- PO EMISARI, bad localization -->

	<!-- Params -->
	<arg name="rate"   	default= "5" />
	<arg name="enableNavigation"  	default= "true" /> 
	<arg name="init_time"  	default= "1" />

	<!-- Mission -->
	<arg name="path"   	 default= "/home/catamaran/bagfiles" />
	<arg name="mission"  default= "/2018_09_26_papallones/test_4" />
	<arg name="file0"    default= "/2018-09-26-14-49-20_0.bag" />
	<arg name="file1"    default= "/2018-09-26-14-53-54_1.bag" />
	<arg name="file2"    default= "/2018-09-26-14-58-21_2.bag" />



	<arg name="bags"   	default= "$(arg path)$(arg mission)$(arg file0) 
								  $(arg path)$(arg mission)$(arg file1) 
								  $(arg path)$(arg mission)$(arg file2)" /><!--	 -->


	<!-- Topics -->
	<arg name="topics"   default="/xiroi/sensors/battery       
                                  /xiroi/sensors/gps           
                                  /xiroi/sensors/imu_mag       
                                  /xiroi/sensors/imu_raw_driver
                                  /xiroi/setpoints             
                                  /xiroi/setpoints_corrected   
                                  /xiroi/setpoints_req         
                                  /xiroi/thruster_current  
								  /xiroi/odometry/filtered_map    
								  " />

	<!-- Bagfile play -->
	<param name="use_sim_time" value="true"/>
	<node  name="rosbag" pkg="rosbag" type="play" args="--clock $(arg bags) -r $(arg rate) --start $(arg init_time) --topics $(arg topics)">
		<remap from="odometry/filtered_map" to="odometry/filtered_map_old"/>
	</node>
</launch>
